{
  "name": "portfolio",
  "private": true,
  "type": "module",
  "scripts": {
    "music-scan": "node scripts/music-scanner.js",
    "dev": "npm run music-scan",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "deploy:demo": "npm run build:prod && netlify deploy --prod",
    "security-check": "npm run build:prod && npm run lighthouse",
    "analyze": "npx lighthouse http://localhost:8080 --output=html --output-path=./lighthouse-report.html --only-categories=performance,accessibility,best-practices,seo",
    "lighthouse": "npx lighthouse http://127.0.0.1:8080 --view --output=html --output-path=./lighthouse-report.html --only-categories=performance,accessibility,best-practices,seo"
  },
  "devDependencies": {
    "terser": "^5.27.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.3.1"
  }
}
